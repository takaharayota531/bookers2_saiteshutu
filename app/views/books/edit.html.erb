<div class="row">
  <div class="col-md-offset-3">
    <div class="col-md-12">
    <h2>Editing Book</h2>
    <%= render 'layouts/errors_messages', errors: @book %>

    <%= form_with model:@book do |f| %>
      <div class="form-group">
        <%= f.label :title, class:'control-label' %>
        <%= f.text_field :title, class:'form-control input-sm' %>
      </div>

      <div class="form-group">
        <%= f.label :body, 'Opinion',class:'control-label' %>
        <%= f.text_area :body, class:'form-control input-sm' %>
      </div>

      <div class="form-group">
        <%= f.submit class:'btn btn-primary btn-block' %>
      </div>
    <% end %>
    </div>
    <div class="col-md-12">
      <%= link_to 'Show', book_path(@book) %>
      <span>|</span>
      <%= link_to 'Back', books_path %>
    </div>
  </div>
</div>