<div class="container">
<div class="row">

  <%= render 'layouts/errors_messages', errors: @user %>

  <%= form_with model:@user do |f| %>
  </br>
    <div class="form-group">
      <%= f.label :name, class:'control-label' %>
      <%= f.text_field :name, class:'form-control input-sm' %>
    </div>

    <div class="form-group">
      <%= f.label :profile_image, class:'control-label' %>
      <%= f.attachment_field :profile_image %>
    </div>

    <div class="form-group">
      <%= f.label :introduction, class:'control-label' %>
      <%= f.text_area :introduction, class:'form-control input-sm' %>
    </div>

    <div class="form-group">
      <%= f.submit class:'btn btn-primary btn-block' %>
    </div>
  <% end %>
</div>
</div>