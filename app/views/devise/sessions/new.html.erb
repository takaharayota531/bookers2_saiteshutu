<div class="row">
  <h2 class="devise-h2">Log in</h2>
  <div class="col-sm-3">

    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <div class="form-group">
        <%= f.label :name, class:'control-label' %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class:'form-control input-sm' %>
      </div>

      <div class="form-group">
        <%= f.label :password, class:'control-label' %>
        <%= f.password_field :password, autocomplete: "current-password", class:'form-control input-sm' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group checkbox">
          <%= f.label :remember_me do %>
            <%= f.check_box :remember_me %>Remember me
          <% end %>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.submit "Log in", class:'btn btn-primary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
